@page
@model RazorPagesLibrary.Pages.Book.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4">Books</h1>

<div class="row">
    @foreach (var item in Model.Book)
    {
        <div class="col-md-4 mb-4">
            <a asp-page="/Details/Index" asp-route-id="@item.Id" class="card-link" style="text-decoration: none;">
                <div class="card">
                    <div class="card-img-wrapper">
                        <img src="@item.CoverImagePath" class="card-img-top mx-auto" alt="Cover Image" style="height: 250px; width: 160px;">
                    </div>
                    <div class="card-body" style="color:white">
                        <h5 class="card-title fw-bold mb-2">@item.Title</h5>
                        <p class="card-text mb-1">@item.Author</p>
                        <p class="card-text mb-1">@item.Genre</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
