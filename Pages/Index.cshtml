@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>

    <section class="text-center homepage-img">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light fw-bold py-2">Welcome to Our Library</h1>
                <h3 class="lead text-body-secondary py-2 fw-bold">Embark on a literary adventure! Dive into the site to uncover a treasure trove of resources waiting for your exploration.</h3>
                <p>
                    <button class="btn btn-light py-2 my-2 fw-bold" onclick="scrollToCategory()">Get Started</button>
                </p>
            </div>
        </div>
    </section>
    <section id="category-section">
    <div class="text-center mb-5 my-4">
        <h2 class="mb-3">Category</h2>
        <h5>Discover literary gems, news, and captivating posts—a world of books awaits!</h5>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        <div class="col">
            <div class="card shadow-sm">
                    <img src="/images/book1.png" class="bd-placeholder-img card-img-top" width="300" height="300" alt="Blog 1">
                <div class="card-body">
                        <p class="card-text fw-bold text-center">Reference</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm">
                    <img src="/images/book2.png" class="bd-placeholder-img card-img-top" width="300" height="300" alt="Blog 2">
                <div class="card-body">
                        <p class="card-text fw-bold text-center">Technology</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm">
                    <img src="/images/book3.png" class="bd-placeholder-img card-img-top" width="300" height="300" alt="Blog 3">
                <div class="card-body">
                        <p class="card-text fw-bold text-center">Finance</p>
                </div>
            </div>
        </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img src="/images/book4.png" class="bd-placeholder-img card-img-top" width="300" height="300" alt="Blog ">
                    <div class="card-body">
                        <p class="card-text fw-bold text-center">Memoir</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
    <section class="mx-4">
        <div class="text-center mb-5 my-4">
            <h2 class="mb-3">News & Blogs</h2>
            <h5>Discover literary gems, news, and captivating posts—a world of books awaits!</h5>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-12 justify-content-center">
            <div class="col">
                <div class="card shadow-sm">
                    <img src="/images/blogs_1.jpg" class="bd-placeholder-img card-img-top" width="384" height="256" alt="Blog 1">
                    <div class="card-body">
                        <p class="card-text semi-bold">Unlock the world of your favorite books with Kindle—a literary adventure awaits at your fingertips.</p>
                        <div class="d-flex justify-content-end align-items-end">
                            <small class="text-body-secondary">5 mins</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img src="/images/blogs_2.jpg" class="bd-placeholder-img card-img-top" width="384" height="256" alt="Blog 2">
                    <div class="card-body">
                        <p class="card-text semi-bold">Discover the must-read books of 2024, a diverse collection to captivate and inspire.</p>
                        <div class="d-flex justify-content-end align-items-end">
                            <small class="text-body-secondary">7 mins</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img src="/images/blogs_3.jpg" class="bd-placeholder-img card-img-top" width="384" height="256" alt="Blog 3">
                    <div class="card-body">
                        <p class="card-text semi-bold">Explore top book picks for 2024 by CEOs, offering insights and inspiration for success.</p>
                        <div class="d-flex justify-content-end align-items-end">
                            <small class="text-body-secondary">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        let hasButtonBeenClicked = false;

        function scrollToCategory() {
            if (!hasButtonBeenClicked) {
                const categorySection = document.getElementById('category-section');
                const offset = categorySection.offsetTop;

                window.scrollTo({
                    top: offset,
                    behavior: 'smooth'
                });

                hasButtonBeenClicked = true;
            }
        }
    </script>
</body>
