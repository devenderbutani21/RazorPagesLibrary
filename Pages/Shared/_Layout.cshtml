<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorPagesLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPagesLibrary.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-2">
            <div class="container">
                <button class="navbar-toggler order-1" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="filter: invert(100%);"></span>
                </button>
                <a class="navbar-brand text-light order-2" asp-area="" asp-page="/Index">
                    <img src="~/images/logo.svg" width="41.25" height="45.75" alt="Library Logo" class="img-fluid" />
                </a>
                <div class="navbar-collapse collapse order-last">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold t-size" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold t-size" asp-area="" asp-page="/About Us/Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold t-size" asp-area="" asp-page="/Books/Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold t-size" asp-area="" asp-page="/Contact Us/Index">Contact Us</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light fw-bold t-size" href="#" id="loginDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/login.png" width="25" height="25" alt="Login Logo" class="img-fluid" />
                            </a>
                            <ul class="dropdown-menu dark-dropdown" aria-labelledby="loginDropdown">
                                <li><a class="dropdown-item text-light semi-bold" href="/Login/Index">Login</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="flex-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap" /></svg>
                </a>
                <span class="mb-3 mb-md-0 text-body-secondary">&copy; 2024 Library</span>
            </div>
            <img src="~/images/social_media.svg" width="156.574" height="44.266" alt="Social Media Logo" class="img-fluid" />
           
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>